{
	"name": "vscode-vlang-112",
	"displayName": "V-112",
	"description": "vlang vscode plugin by 112,provides only the function of defining jumps",
	"version": "0.0.2",
	"publisher": "Mercury-tree-z112",
	"icon": "icons/icon.png",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/zhangbush/vscode-vlang-112"
	},
	"keywords": [
		"V",
		"v",
		"v language",
		"vlang",
		"extension",
		"定义跳转"
	],
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"configuration": {
			"title": "V-112",
			"properties": {
				"v-112.vls-112.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "启用vls-112"
				},
				"v-112.vls-112.customPath": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "vls-112可执行程序的绝对路径"
				},
				"v-112.vls-112.vexe": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "vls-112需要的V可执行程序的绝对路径(VEXE)"
				},
				"v-112.vls-112.loglv": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "用来控制vls-112-debug.log中输出信息的多少"
				},
				"v-112.vls-112.debug": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "以debug模式启动vls-112\n会在当前workspace文件夹下生成log文件`vls-112-debug.log`"
				},
				"v-112.vls-112.connectionMode": {
					"scope": "resource",
					"type": "string",
					"default": "stdio",
					"enum": [
						"stdio"
					],
					"description": "plugin 与 vsl-112的数据交换方式",
					"enumDescriptions": [
						"Connects to the language server via standard input/output. (Default)",
						"Connects to the language server via TCP. (Has not been implemented)"
					]
				},
				"v-112.vls-112.tcpMode.port": {
					"scope": "resource",
					"type": "number",
					"default": 5008,
					"description": "TCP模式下vsl-112连接的端口号"
				}
			}
		},
		"commands": [
			{
				"command": "v-112.vls-112.restart",
				"title": "Restart VLS",
				"category": "V-112"
			}
		]
	},
	"activationEvents": [
		"workspaceContains:**/*.v",
		"onLanguage:v"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}